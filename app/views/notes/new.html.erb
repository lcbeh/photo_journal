<body >
  <div class="container-fluid home-border">
    <a href="<%= notes_path%>" class="col-md-1">Home</a>
  </div>

  <div class="new-form">
    <%= form_for :note, url: notes_path do |f| %>
      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title, class: "form-input"%>
      </p>

      <p>
        <%= f.label :description %><br>
        <%= f.text_area :description, class: "form-input", rows: 10 %>
      </p>

      <p>
        <%= f.label :image %><br>
        <%= f.file_field :image %>
      </p>

      <p class="submit-new-button">
        <%= f.submit "Create Note"%>
      </p>
    <% end %>
  </div>

</body>
