<div class="home-border">
  <a href="<%= notes_path%>">Home</a>
</div>

<body style="background-image: url('<%= @note.image.page %>'); background-repeat: no-repeat; background-size: cover" class="grayscale">
  <div class="col-md-8"></div>
  <div class="text-info col-md-3">
    <%= form_for :note, url: note_path(@note), method: :patch do |f| %>
      <p>
        <%= f.label :title%><br>
        <%= f.text_field :title, placeholder: @note.title %>
      </p>

      <p>
        <%= f.label :description%><br>
        <%= f.text_area :description, placeholder: "#{@note.description}", rows: 20 %>
      </p>

      <p>
        New Image<br>
        <%= f.file_field :image %>
      </p>

      <p>
        <%= f.submit 'Update', class: "submit-button" %>
      </p>
    <% end %>
  </div>


</body>
